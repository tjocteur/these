	pages = {6231--6236},
	file = {Full Text PDF:/home/psm/snap/zotero-snap/common/Zotero/storage/P547IZ3F/Weiss et al. - 2014 - (Finite) statistical size effects on compressive strength.pdf:application/pdf},
